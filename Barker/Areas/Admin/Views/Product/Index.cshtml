@model List<Barker.Models.CategoryModel>

@{
    Layout = "_AdminLayout";
}

<h2>Categories</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(category.Img))
                    {
                        <img src="@Url.Content(category.Img)" alt="@category.Name" class="img-thumbnail" style="max-width: 100px;" />
                    }
                    else
                    {
                        <span>No image available</span>
                    }
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-primary">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-outline-danger">Delete</a>
                    <a href="/Customer/Category/Details/@category.Name" class="btn btn-outline-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
