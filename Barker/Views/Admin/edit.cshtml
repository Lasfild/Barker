@model CategoryModel
@{
    Layout = "_AdminLayout";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row mt-2">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating mb-3 row p-1">
                    <input asp-for="Name" class="form-control border-0 shadow" placeholder="Name" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger p-0"></span>
                </div>
                <div class="form-floating mb-3 row p-1">
                    <input asp-for="Description" class="form-control border-0 shadow" placeholder="Description" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger p-0"></span>
                </div>
                <div class="form-floating mb-3 row p-1">
                    <input asp-for="Img" class="form-control border-0 shadow" placeholder="Img" />
                    <label asp-for="Img" class="ms-2"></label>
                    <span asp-validation-for="Img" class="text-danger p-0"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-info form-control">Edit</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="admin" asp-action="Index" class="btn btn-outline-primary form-control">Back To Categories</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>